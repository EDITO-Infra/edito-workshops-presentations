{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "resources": {
      "description": "Your service will have at least the requested resources and never more than its limits. No limit for a resource and you can consume everything left on the host machine.",
      "type": "object",
      "properties": {
        "requests": {
          "description": "Guaranteed resources",
          "type": "object",
          "properties": {
            "cpu": {
              "description": "The amount of cpu guaranteed",
              "title": "CPU",
              "type": "string",
              "default": "100m",
              "render": "slider",
              "sliderMin": 100,
              "sliderMax": 7200,
              "sliderStep": 100,
              "sliderUnit": "m",
              "sliderExtremity": "down",
              "sliderExtremitySemantic": "guaranteed",
              "sliderRangeId": "cpu"
            },
            "memory": {
              "description": "The amount of memory guaranteed",
              "title": "memory",
              "type": "string",
              "default": "1Gi",
              "render": "slider",
              "sliderMin": 1,
              "sliderMax": 28,
              "sliderStep": 1,
              "sliderUnit": "Gi",
              "sliderExtremity": "down",
              "sliderExtremitySemantic": "guaranteed",
              "sliderRangeId": "memory"
            }
          }
        },
        "limits": {
          "description": "max resources",
          "type": "object",
          "properties": {
            "cpu": {
              "description": "The maximum amount of cpu",
              "title": "CPU",
              "type": "string",
              "default": "1000m",
              "render": "slider",
              "sliderMin": 100,
              "sliderMax": 7200,
              "sliderStep": 100,
              "sliderUnit": "m",
              "sliderExtremity": "up",
              "sliderExtremitySemantic": "Maximum",
              "sliderRangeId": "cpu"
            },
            "memory": {
              "description": "The maximum amount of memory",
              "title": "Memory",
              "type": "string",
              "default": "4Gi",
              "render": "slider",
              "sliderMin": 1,
              "sliderMax": 28,
              "sliderStep": 1,
              "sliderUnit": "Gi",
              "sliderExtremity": "up",
              "sliderExtremitySemantic": "Maximum",
              "sliderRangeId": "memory"
            }
          }
        }
      }
    },
    "s3": {
      "description": "Configuration of temporary identity",
      "type": "object",
      "x-onyxia": {
        "overwriteSchemaWith": "ide/s3.json"
      },
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Add S3 temporary identity inside your environment",
          "default": true
        },
        "accessKeyId": {
          "description": "AWS Access Key",
          "type": "string",
          "x-form": {
            "value": "{{s3.AWS_ACCESS_KEY_ID}}"
          },
          "x-onyxia": {
            "overwriteDefaultWith": "s3.AWS_ACCESS_KEY_ID"
          },
          "hidden": {
            "value": false,
            "path": "s3/enabled"
          }
        },
        "endpoint": {
          "description": "AWS S3 Endpoint",
          "type": "string",
          "x-form": {
            "value": "{{s3.AWS_S3_ENDPOINT}}"
          },
          "x-onyxia": {
            "overwriteDefaultWith": "{{s3.AWS_S3_ENDPOINT}}"
          },
          "hidden": {
            "value": false,
            "path": "s3/enabled"
          }
        },
        "defaultRegion": {
          "description": "AWS S3 default region",
          "type": "string",
          "x-form": {
            "value": "{{s3.AWS_DEFAULT_REGION}}"
          },
          "x-onyxia": {
            "overwriteDefaultWith": "{{s3.AWS_DEFAULT_REGION}}"
          },
          "hidden": {
            "value": false,
            "path": "s3/enabled"
          }
        },
        "secretAccessKey": {
          "description": "AWS S3 secret access key",
          "type": "string",
          "render": "password",
          "x-form": {
            "value": "{{s3.AWS_SECRET_ACCESS_KEY}}"
          },
          "x-onyxia": {
            "overwriteDefaultWith": "{{s3.AWS_SECRET_ACCESS_KEY}}"
          },
          "hidden": {
            "value": false,
            "path": "s3/enabled"
          }
        },
        "sessionToken": {
          "description": "AWS S3 session Token",
          "type": "string",
          "render": "password",
          "x-form": {
            "value": "{{s3.AWS_SESSION_TOKEN}}"
          },
          "x-onyxia": {
            "overwriteDefaultWith": "{{s3.AWS_SESSION_TOKEN}}"
          },
          "hidden": {
            "value": false,
            "path": "s3/enabled"
          }
        }
      }
    },
    "image": {
      "description": "Docker image configuration for your processing model",
      "type": "object",
      "properties": {
        "repository": {
          "description": "Docker image repository",
          "type": "string",
          "default": "your-registry/your-model",
          "x-form": {
            "placeholder": "your-registry/your-model"
          }
        },
        "tag": {
          "description": "Docker image tag",
          "type": "string",
          "default": "1.0.0",
          "x-form": {
            "placeholder": "1.0.0"
          }
        },
        "pullPolicy": {
          "description": "Docker image pull policy",
          "type": "string",
          "default": "IfNotPresent",
          "enum": ["IfNotPresent", "Always", "Never"]
        }
      }
    },
    "processing": {
      "description": "Processing configuration",
      "type": "object",
      "properties": {
        "dataPreparationCommand": {
          "description": "Command to run for data preparation",
          "type": "string",
          "default": "Rscript /Scripts/01_data_preparation.R",
          "x-form": {
            "placeholder": "Rscript /Scripts/01_data_preparation.R"
          }
        },
        "modelAnalysisCommand": {
          "description": "Command to run for model analysis",
          "type": "string",
          "default": "Rscript /Scripts/02_model_analysis.R",
          "x-form": {
            "placeholder": "Rscript /Scripts/02_model_analysis.R"
          }
        }
      }
    },
    "inputData": {
      "description": "Input data configuration",
      "type": "object",
      "properties": {
        "s3Path": {
          "description": "S3 path to input data folder (e.g., 'example-process/input' or 'my-project/data')",
          "type": "string",
          "default": "example-process/input",
          "x-form": {
            "placeholder": "example-process/input"
          }
        }
      }
    },
    "output": {
      "description": "Output configuration",
      "type": "object",
      "properties": {
        "s3Path": {
          "description": "S3 path to output data folder (e.g., 'example-process/output' or 'my-project/data')",
          "type": "string",
          "default": "example-process/output",
          "x-form": {
            "placeholder": "example-process/output"
          }
        }
      }
    },
    "startupProbe": {
      "type": "object",
      "description": "Start up probe",
      "default": {},
      "x-form": {
        "hidden": true,
        "value": "{{region.startupProbe}}"
      },
      "x-onyxia": {
        "hidden": true,
        "overwriteDefaultWith": "region.startupProbe"
      }
    }
  }
}
